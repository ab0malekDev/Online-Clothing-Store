<%- include('../partials/header') %>

<div class="auth-page">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">
                <div class="auth-card">
                    <h1 class="auth-title">تسجيل الدخول</h1>
                    <% if (error) { %>
                        <div class="alert alert-danger mb-4">
                            <%= error %>
                        </div>
                    <% } %>
                    <form action="/auth/login" method="POST" class="login-form">
                        <div class="mb-4">
                            <label for="username" class="form-label">البريد الإلكتروني أو اسم المستخدم</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fas fa-user"></i>
                                </span>
                                <input type="text"
                                       class="form-control"
                                       id="username"
                                       name="username"
                                       placeholder="أدخل البريد الإلكتروني أو اسم المستخدم"
                                       required>
                            </div>
                        </div>
                        <div class="mb-4">
                            <label for="password" class="form-label">كلمة المرور</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fas fa-lock"></i>
                                </span>
                                <input type="password" 
                                       class="form-control" 
                                       id="password" 
                                       name="password" 
                                       placeholder="أدخل كلمة المرور"
                                       required>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="fas fa-sign-in-alt me-2"></i>
                            تسجيل الدخول
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.auth-page {
    min-height: 100vh;
    display: flex;
    align-items: center;
    background-color: var(--bg-light);
    padding: 2rem 0;
    margin-top: -100px;
}

.auth-card {
    background: var(--white);
    padding: 2.5rem;
    border-radius: 25px;
    box-shadow: 0 5px 20px rgba(233, 77, 137, 0.1);
}

.auth-title {
    color: var(--primary-color);
    font-size: 2rem;
    font-weight: bold;
    text-align: center;
    margin-bottom: 2rem;
    position: relative;
}

.auth-title::after {
    content: '';
    position: absolute;
    bottom: -10px;
    left: 50%;
    transform: translateX(-50%);
    width: 100px;
    height: 3px;
    background: linear-gradient(to right, var(--primary-color), var(--bg-light));
    border-radius: 3px;
}

.form-label {
    color: var(--primary-color);
    font-weight: 600;
    margin-bottom: 0.5rem;
}

.input-group-text {
    background-color: var(--bg-light);
    border: 1px solid var(--bg-light);
    color: var(--primary-color);
}

.form-control {
    border: 1px solid var(--bg-light);
    padding: 0.75rem 1rem;
    border-radius: 0 15px 15px 0;
}

.input-group-text {
    border-radius: 15px 0 0 15px;
    padding: 0 1rem;
}

.form-control:focus {
    border-color: var(--primary-color);
    box-shadow: 0 0 0 0.2rem rgba(233, 77, 137, 0.25);
}

.btn-primary {
    background: linear-gradient(45deg, var(--primary-color), #d63f7a);
    border: none;
    padding: 0.75rem 1.5rem;
    font-weight: 600;
    border-radius: 25px;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(233, 77, 137, 0.2);
}

.btn-primary:hover {
    background: linear-gradient(45deg, #d63f7a, var(--primary-color));
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(233, 77, 137, 0.3);
}

.alert {
    border-radius: 15px;
    border: none;
    padding: 1rem;
}

.alert-danger {
    background-color: #ffe4e6;
    color: #e91e63;
}

@media (max-width: 768px) {
    .auth-card {
        padding: 2rem;
        margin: 1rem;
    }
}
</style>

<%- include('../partials/footer') %>