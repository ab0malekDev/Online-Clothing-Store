<%- include('../partials/header') %>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-white">
                    <h3 class="card-title text-center mb-0">تفصيل فستان جديد</h3>
                </div>
                <div class="card-body">
                    <form action="/tickets" method="POST" enctype="multipart/form-data">
                        <!-- عنوان الطلب -->
                        <div class="mb-4">
                            <label for="title" class="form-label">عنوان الطلب</label>
                            <input type="text" 
                                   class="form-control" 
                                   id="title" 
                                   name="title"
                                   placeholder="مثال: فستان سهرة أزرق"
                                   required>
                        </div>

                        <!-- القياسات -->
                        <div class="card mb-4">
                            <div class="card-header bg-light">
                                <h5 class="mb-0">القياسات</h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label for="bust" class="form-label">محيط الصدر (سم)</label>
                                            <input type="number" 
                                                   class="form-control" 
                                                   id="bust" 
                                                   name="measurements[bust]"
                                                   step="0.1"
                                                   required>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label for="waist" class="form-label">محيط الخصر (سم)</label>
                                            <input type="number" 
                                                   class="form-control" 
                                                   id="waist" 
                                                   name="measurements[waist]"
                                                   step="0.1"
                                                   required>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label for="hips" class="form-label">محيط الأرداف (سم)</label>
                                            <input type="number" 
                                                   class="form-control" 
                                                   id="hips" 
                                                   name="measurements[hips]"
                                                   step="0.1"
                                                   required>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label for="length" class="form-label">الطول الكامل (سم)</label>
                                            <input type="number" 
                                                   class="form-control" 
                                                   id="length" 
                                                   name="measurements[length]"
                                                   step="0.1"
                                                   required>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label for="sleeves" class="form-label">طول الأكمام (سم)</label>
                                            <input type="number" 
                                                   class="form-control" 
                                                   id="sleeves" 
                                                   name="measurements[sleeves]"
                                                   step="0.1"
                                                   required>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label for="shoulders" class="form-label">عرض الأكتاف (سم)</label>
                                            <input type="number" 
                                                   class="form-control" 
                                                   id="shoulders" 
                                                   name="measurements[shoulders]"
                                                   step="0.1"
                                                   required>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="mb-3">
                                            <label for="measurementNotes" class="form-label">ملاحظات إضافية عن القياسات</label>
                                            <textarea class="form-control" 
                                                      id="measurementNotes" 
                                                      name="measurements[notes]"
                                                      rows="2"></textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- التفضيلات -->
                        <div class="card mb-4">
                            <div class="card-header bg-light">
                                <h5 class="mb-0">تفضيلات التصميم</h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label for="color" class="form-label">اللون المفضل</label>
                                            <input type="text" 
                                                   class="form-control" 
                                                   id="color" 
                                                   name="preferences[color]"
                                                   required>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label for="style" class="form-label">الستايل المفضل</label>
                                            <input type="text" 
                                                   class="form-control" 
                                                   id="style" 
                                                   name="preferences[style]"
                                                   placeholder="مثال: كلاسيك، عصري، إلخ"
                                                   required>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="mb-3">
                                            <label for="fabric" class="form-label">نوع القماش المفضل</label>
                                            <input type="text" 
                                                   class="form-control" 
                                                   id="fabric" 
                                                   name="preferences[fabric]"
                                                   required>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="mb-3">
                                            <label for="designNotes" class="form-label">ملاحظات إضافية عن التصميم</label>
                                            <textarea class="form-control" 
                                                      id="designNotes" 
                                                      name="preferences[notes]"
                                                      rows="3"
                                                      placeholder="اكتبي أي تفاصيل إضافية عن التصميم الذي تريدينه"></textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- صور مرجعية -->
                        <div class="mb-4">
                            <label class="form-label">صور مرجعية (اختياري)</label>
                            <input type="file" 
                                   class="form-control" 
                                   name="attachments" 
                                   accept="image/*"
                                   multiple>
                            <div class="form-text">يمكنك رفع صور للتصاميم التي تعجبك كمرجع</div>
                        </div>

                        <!-- أزرار التحكم -->
                        <div class="d-flex gap-2 justify-content-end">
                            <a href="/orders" class="btn btn-secondary">
                                <i class="fas fa-times"></i>
                                إلغاء
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-paper-plane"></i>
                                إرسال الطلب
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.card {
    border: none;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    border-radius: 15px;
}

.card-header {
    border-bottom: 1px solid rgba(233, 77, 137, 0.1);
    border-radius: 15px 15px 0 0 !important;
}

.card-title {
    color: var(--primary-color);
    font-weight: 700;
}

.form-label {
    color: var(--primary-color);
    font-weight: 600;
}

.form-control {
    border-radius: 10px;
    border: 1px solid rgba(233, 77, 137, 0.2);
    padding: 0.75rem 1rem;
}

.form-control:focus {
    border-color: var(--primary-color);
    box-shadow: 0 0 0 0.2rem rgba(233, 77, 137, 0.25);
}

.btn {
    padding: 0.75rem 1.5rem;
    border-radius: 10px;
    font-weight: 600;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
}

.btn-primary {
    background: linear-gradient(45deg, var(--primary-color), var(--primary-hover));
    border: none;
}

.btn-primary:hover {
    background: linear-gradient(45deg, var(--primary-hover), var(--primary-color));
    transform: translateY(-2px);
}

.btn-secondary {
    background: var(--gray);
    border: none;
}

.btn-secondary:hover {
    background: #5a6268;
    transform: translateY(-2px);
}

.form-text {
    color: var(--gray);
    font-size: 0.875rem;
    margin-top: 0.25rem;
}
</style>

<%- include('../partials/footer') %>